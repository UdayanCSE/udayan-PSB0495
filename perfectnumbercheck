//program to check whether a number is perfect or not
#include <stdio.h>
int main()
{
    int n,r,sum=0,i;
    printf("enter the number to be checked: ");
    scanf("%d",&n);
    for(i=1;i<n;i++)
    {
        r=n%i;
        if(r==0)
        sum=sum+i;
    }
    if(sum==n)
    printf("the given number is a perfect number");
    else
    printf("the given number is not a perfect number");
}
